<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <constant name="struts.action.excludePattern" value="/ShitServlet"/>
    <constant name="struts.enable.DynamicMethodInvocation" value="false" />
    <constant name="struts.multipart.maxSize" value="1024000"/><!--最大上传1M的图片-->
    <constant name="struts.multipart.saveDir" value="D:/temp"/><!--临时目录-->
    <constant name="struts.convention.result.path" value="/" />
    <constant name="struts.convention.classes.reload" value="true" />
    <constant name="struts.devMode" value="true" />
    <constant name="struts.ui.theme" value="simple"/>
    <constant name="struts.i18n.encoding" value="UTF-8"/>
    <constant name="struts.custom.i18n.resources" value="message"/>
    <constant name="struts.locale" value="zh-cn"/>
    <constant name="com.chinacnd.allowed.images" value="gif,jpeg,jpg,png,bmp"/><!--可上传的图片后缀-->
    
    <package name="admin-default" extends="json-default">
        <interceptors>
            <interceptor name="jsonWrapper" class="com.chinacnd.b2b.paper.web.interceptor.JsonResultInterceptor"/>
            <interceptor name="exception" class="com.chinacnd.b2b.paper.web.interceptor.JsonExceptionInterceptor"/>
            <interceptor name="needLogin" class="com.chinacnd.b2b.paper.web.interceptor.NeedLoginInterceptor"/>
            <interceptor-stack name="adminDefault">
                <interceptor-ref name="jsonWrapper"/>
                <interceptor-ref name="needLogin"/>
                <interceptor-ref name="exception"/>
                <interceptor-ref name="defaultStack"/>
            </interceptor-stack>
        </interceptors>
        <default-interceptor-ref name="adminDefault"/>
        <global-results>
            <result name="__JSON_RESULT__" type="json">
                <param name="root">__JSON_ROOT__</param>
                <param name="excludeNullProperties">true</param>
                <param name="noCache">true</param>
            </result>
        </global-results>
    </package>
</struts>
